<div class="page_container">
<h1>Listing all members</h2>
    <div class="col-lg-6 col-md-6">
  <p>
  <%=link_to "Create new member", signup_path %>
</p>
<p>
<%= will_paginate%>
</p>
  <table class="table table-striped table-hover ">
    <tr>
      <td>
        Email
      </td>
      <td>
        Ticket Count
      </td>
      <td>
        Actions
      </td>
    </tr>
    <%@members.each do |member| %>
    <tr>
      <td>
        <%= gravatar_for member, size: 30%> <%=member.email%>
      </td>
      <td>
        <%=pluralize(member.tickets.count,"ticket") if member.tickets%>
      </td>
      <td>
        <%=link_to "Edit", edit_member_path(member) %>
        <%=link_to "Show", member_path(member) %>
          <%=link_to "Delete", member_path(member), method: :delete, data: {confirm: "are you sure"} %>
      </td>

    </tr>
      <% end %>
  </table>
  <p>
  <%= will_paginate%>
  </p>
</div>
</div>
