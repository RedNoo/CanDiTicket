<div class="col-lg-6 col-md-6 col-xs-6">
  <div class="row">
    <div class="col-xs-12">
<%= render "shared/errors", obj: @member %>

<%= form_for(@member, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="col-xs-2">
        <div class="control-label">
            <%= f.label :email %>
        </div>
    </div>
    <div class="col-xs-10">
      <%= f.text_field :email, class: "form-control", placeholder: "email", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-2">
        <div class="control-label">
            <%= f.label :password %>
        </div>
    </div>
    <div class="col-xs-10">
      <%= f.text_field :password, class: "form-control", placeholder: "password" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit (@member.new_record? ? "Sign Up" : "Update Member"), class: "btn btn-default"%>
    </div>
  </div>

<% end %>

</div>
</div>
</div>
