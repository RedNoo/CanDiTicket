<h1>Listing all tickets</h2>
  <p>
  <%=link_to "Create new ticket", new_ticket_path %>
</p>
  <table>
    <tr>
      <td>
        Title
      </td>

    </tr>
    <%@tickets.each do |ticket| %>
    <tr>
      <td>
        <%=ticket.subject%>
      </td>
      <td>
        <%=link_to "Edit", edit_ticket_path(ticket) %>
        <%=link_to "Show", ticket_path(ticket) %>
          <%=link_to "Delete", ticket_path(ticket), method: :delete, data: {confirm: "are you sure"} %>
      </td>

    </tr>
      <% end %>
  </table>
