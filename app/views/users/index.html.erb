<div class="page_container">
<h1>Listing all users</h2>
    <div class="col-lg-6 col-md-6">
  <p>
  <%=link_to "Create new user", signup_path %>
</p>
<p>
<%= will_paginate%>
</p>
  <table class="table table-striped table-hover ">
    <tr>
      <td>
        Email
      </td>
      <td>
        Ticket Count
      </td>
      <td>
        Actions
      </td>
    </tr>
    <%@users.each do |user| %>
    <tr>
      <td>
        <%= gravatar_for user, size: 30%> <%=user.email%>
      </td>
      <td>
        <%#=pluralize(user.tickets.count,"ticket") if user.tickets%>
      </td>
      <td>
        <%=link_to "Edit", edit_user_path(user) %>
        <%=link_to "Show", user_path(user) %>
          <%=link_to "Delete", user_path(user), method: :delete, data: {confirm: "are you sure"} %>
      </td>

    </tr>
      <% end %>
  </table>
  <p>
  <%= will_paginate%>
  </p>
</div>
</div>
