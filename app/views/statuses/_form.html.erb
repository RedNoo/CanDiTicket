<div class="col-lg-6 col-md-6 col-xs-6">
  <div class="row">
    <div class="col-xs-12">
<%= render "shared/errors", obj: @status %>
<%= form_for(@status, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="col-xs-2">
        <div class="control-label">
            <%= f.label :title %>
        </div>
    </div>
    <div class="col-xs-10">
      <%= f.text_field :title, class: "form-control", placeholder: "status", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit  class: "btn btn-default"%>
    </div>
  </div>

<% end %>
<div class="text-right">
<%=link_to "Back to Department list", statuses_path %>
</div>
</div>
</div>
</div>
