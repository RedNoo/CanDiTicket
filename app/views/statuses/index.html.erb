<h1>Listing all statuses</h2>
  <p>
  <%=link_to "Create new status", new_status_path %>
</p>
  <table>
    <tr>
      <td>
        Title
      </td>

    </tr>
    <%@statuses.each do |status| %>
    <tr>
      <td>
        <%=status.title%>
      </td>
      <td>
        <%=link_to "Edit", edit_status_path(status) %>
        <%=link_to "Show", status_path(status) %>
          <%=link_to "Delete", status_path(status), method: :delete, data: {confirm: "are you sure"} %>
      </td>

    </tr>
      <% end %>
  </table>
